{
  "name": "@motioneffector/sql",
  "version": "1.0.0",
  "description": "TypeScript wrapper around SQL.js for browser-based SQLite databases with migrations, persistence, and type safety",
  "author": "motioneffector",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/motioneffector/sql"
  },
  "homepage": "https://github.com/motioneffector/sql#readme",
  "bugs": {
    "url": "https://github.com/motioneffector/sql/issues"
  },
  "keywords": [
    "sqlite",
    "sql",
    "database",
    "browser",
    "wasm",
    "indexeddb",
    "localstorage",
    "migrations",
    "persistence",
    "offline-first",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.js.map",
    "dist/index.d.ts",
    "dist/index.d.ts.map",
    "dist/types.d.ts",
    "dist/types.d.ts.map",
    "dist/errors.d.ts",
    "dist/errors.d.ts.map",
    "dist/database.d.ts",
    "dist/database.d.ts.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:manual",
    "build:manual": "node scripts/build-manual.cjs",
    "test": "vitest",
    "test:run": "vitest run --exclude src/fuzz.test.ts",
    "fuzz:thorough": "FUZZ_THOROUGH=1 vitest run src/fuzz.test.ts --testTimeout=120000 --poolOptions.threads.singleThread=true",
    "lint": "eslint src",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "peerDependencies": {
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "marked": "^12.0.2",
    "prettier": "^3.0.0",
    "sql.js": "^1.8.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
